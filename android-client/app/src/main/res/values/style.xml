<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>
    <style name="SignInButtonStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/primary_700</item>
        <item name="android:background">@drawable/rounded_edge</item>
        <!-- Add more customizations as per your requirements -->
    </style>
    <style name="circleImage" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>
    <style name="Widget.AppTheme.MaterialButton" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/button_state_color</item>
    </style>
    <style name="MaterialCalendarTheme" parent="ThemeOverlay.MaterialComponents.MaterialCalendar">
        <item name="colorOnPrimary">@color/accent</item>
        <item name="colorPrimary">@color/primary_700</item>
<!--        white background-->
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/black</item>
        <item name="colorPrimaryVariant">@color/primary_700</item>
        <item name="colorSecondary">@color/primary_700</item>
        <item name="colorSecondaryVariant">@color/primary_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="colorError">@color/red</item>
        <item name="colorOnError">@color/white</item>
        <item name="colorOnBackground">@color/black</item>
        <item name="colorControlActivated">@color/primary_700</item>
        <item name="colorControlHighlight">@color/primary_700</item>
        <item name="colorControlNormal">@color/primary_700</item>
        <item name="colorPrimaryDark">@color/primary_700</item>
<!--        text color is black-->
        <item name="android:textColorPrimary">@color/black</item>
    </style>
    <style name="MaterialTimePickerTheme" parent="ThemeOverlay.MaterialComponents.TimePicker">
        <item name="colorOnPrimary">@color/accent</item>
        <item name="colorPrimary">@color/primary_700</item>
        <!--        white background-->
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/black</item>
        <item name="colorPrimaryVariant">@color/primary_700</item>
        <item name="colorSecondary">@color/primary_700</item>
        <item name="colorSecondaryVariant">@color/primary_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="colorError">@color/red</item>
        <item name="colorOnError">@color/white</item>
        <item name="colorOnBackground">@color/black</item>
        <item name="colorControlActivated">@color/primary_700</item>
        <item name="colorControlHighlight">@color/primary_700</item>
        <item name="colorControlNormal">@color/primary_700</item>
        <item name="colorPrimaryDark">@color/primary_700</item>
        <!--        text color is black-->
        <item name="android:textColorPrimary">@color/black</item>
    </style>
</resources>