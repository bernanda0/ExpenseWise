<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>
    <style name="SignInButtonStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/primary_700</item>
        <item name="android:background">@drawable/rounded_edge</item>
        <!-- Add more customizations as per your requirements -->
    </style>
    <style name="circleImage" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>
    <style name="Widget.AppTheme.MaterialButton" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/button_state_color</item>
    </style>
</resources>